#!/usr/bin/env node

'use strict'

const fs = require('fs')
const path = require('path')
const cp = require('child_process')
const { getUserDataPath } = require('./dist-info')

// Appveyor sets core.autocrlf = input globally, let's stick to whatever is
// defined at the system level for now
cp.execSync('git config --global --unset core.autocrlf')

console.log('\ngit config:')
const output = cp.execSync('git config -l --show-origin', { encoding: 'utf-8' })
console.log(output + '\n\n')

// clear out existing log files
const directory = getUserDataPath()
if (!fs.existsSync(directory)) {
  return
}

const files = fs.readdirSync(directory)
files.forEach(file => {
  if (file.endsWith('.log')) {
    console.log(`deleting ${file}`)
    const fullPath = path.join(directory, file)
    fs.unlinkSync(fullPath)
  }
})
