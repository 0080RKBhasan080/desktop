{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./build/app"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "typings/browser",
    "typings/browser.d.ts"
  ],
  "compileOnSave": false
}
